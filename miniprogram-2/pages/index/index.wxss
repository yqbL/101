.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-image: linear-gradient(to bottom, #e0f2ff, #ffffff); /* 模拟渐变背景 */
}

.navbar {
  background-color: #e3f2fd; 
}

.login-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 50rpx;
  color: #333; /* 标题颜色 */
}

.input-container {
  width: 80%;
  margin-bottom: 30rpx;
}

.input-field {
  border: 1rpx solid #e6e6e6; /* 输入框边框颜色 */
  border-radius: 10rpx;
  padding: 15rpx;
  width: 100%;
  box-sizing: border-box;
  background-color: #f5f5f5; /* 输入框背景颜色 */
}

.login-btn,
.register-btn,
.forget-btn,
.wechat-login-btn {
  width: 80%;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  padding: 15rpx;
  background-color: #007aff; /* 按钮背景颜色 */
  color: #fff; /* 按钮文字颜色 */
  text-align: center;
  font-size: 30rpx; /* 按钮文字大小 */
}

.agreement {
  font-size: 24rpx;
  color: #999; /* 协议文字颜色 */
  text-align: center;
}

.agreement-link {
  color: #007aff; /* 协议链接颜色 */
}